{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "sheet-demo",
  "type": "registry:example",
  "description": "Basic sheet",
  "registryDependencies": [
    "@uitopia/sheet",
    "@uitopia/button",
    "@uitopia/form",
    "@uitopia/field"
  ],
  "files": [
    {
      "path": "registry/components/sheet-demo.tsx",
      "content": "import { Button } from \"@/registry/ui/button\";\nimport { Field, FieldControl, FieldLabel } from \"@/registry/ui/field\";\nimport { Form } from \"@/registry/ui/form\";\nimport {\n  Sheet,\n  SheetClose,\n  SheetDescription,\n  SheetFooter,\n  SheetHeader,\n  SheetPopup,\n  SheetTitle,\n  SheetTrigger,\n} from \"@/registry/ui/sheet\";\n\nexport default function DialogDemo() {\n  return (\n    <Sheet>\n      <SheetTrigger render={<Button variant=\"outline\" />}>\n        Open Sheet\n      </SheetTrigger>\n      <SheetPopup>\n        <Form>\n          <SheetHeader>\n            <SheetTitle>Edit profile</SheetTitle>\n            <SheetDescription>\n              Make changes to your profile here. Click save when you&apos;re\n              done.\n            </SheetDescription>\n          </SheetHeader>\n          <div className=\"flex flex-col gap-4 px-4\">\n            <Field>\n              <FieldLabel>Name</FieldLabel>\n              <FieldControl type=\"text\" defaultValue=\"Margaret Welsh\" />\n            </Field>\n            <Field>\n              <FieldLabel>Username</FieldLabel>\n              <FieldControl type=\"text\" defaultValue=\"@maggie.welsh\" />\n            </Field>\n          </div>\n          <SheetFooter>\n            <SheetClose render={<Button variant=\"ghost\" />}>Cancel</SheetClose>\n            <Button type=\"submit\">Save</Button>\n          </SheetFooter>\n        </Form>\n      </SheetPopup>\n    </Sheet>\n  );\n}\n",
      "type": "registry:example"
    }
  ],
  "categories": [
    "sheet",
    "dialog"
  ]
}